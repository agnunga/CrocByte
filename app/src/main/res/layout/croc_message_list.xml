<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_entry_base"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/profile_pic_layout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/profile_entry"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:src="@drawable/an_agunga"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_toRightOf="@id/profile_pic_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dip"
        >

        <TextView
            android:id="@+id/time_entry"
            android:layout_alignParentRight="true"
            android:text="12:34"
            android:textSize="12sp"
            android:textColor="#16171e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name_entry"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:textSize="17sp"
            android:text="Oloo Baa(+254 712 929 181)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message_entry"
            android:layout_alignParentLeft="true"
            android:text="Coming home with something. Prepare...."
            android:textSize="14sp"
            android:layout_below="@id/name_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>