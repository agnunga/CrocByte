<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relative_layout_received_msg"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/layout_received"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sharp_rec_conner"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8.5dp"
            android:layout_marginRight="-15dp"
            android:layout_weight="1"
            android:src="@drawable/arrow_bg2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:layout_weight="6"
            android:layout_alignLeft="@+id/sharp_rec_conner"
            android:background="@drawable/rounded_corner1"
            android:padding="6dp" >

            <TextView
                android:id="@+id/textViewRecMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sasaa..."  />

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSentMsg"
                android:layout_alignParentRight="true"
                android:text="17:30"
                android:textSize="9sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/message_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSentMsg"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="+254 712 929 181"
                android:textSize="10sp"
                android:textColor="#000" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
