<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_entry_base"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/profile_pic_layout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:src="@drawable/an_agunga"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_toRightOf="@id/profile_pic_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/name_entry"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="Name: Oloo Baa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/number_entry"
            android:layout_alignParentLeft="true"
            android:text="Phone: +254 712 929 181"
            android:textSize="14sp"
            android:layout_below="@id/name_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/source_layout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="5dp">

            <ImageView
                android:id="@+id/source_pic"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:src="@drawable/time_passing"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>