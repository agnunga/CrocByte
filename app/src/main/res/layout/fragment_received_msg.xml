<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    tools:context="layout.Received_msg">

    <RelativeLayout
        android:id="@+id/layout_received"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sharp_rec_conner"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8.5dp"
            android:layout_marginRight="-15dp"
            android:layout_weight="1"
            android:src="@drawable/arrow_bg2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:layout_weight="6"
            android:layout_alignLeft="@+id/sharp_rec_conner"
            android:background="@drawable/rounded_corner1"
            android:padding="6dp" >


            <TextView
                android:id="@+id/message_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="+254 712 929 181"
                android:textSize="11sp" />

            <View
                android:id="@+id/line_hr"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/message_phone"
                android:background="#73abb6b4"/>

            <TextView
                android:id="@+id/textViewRecMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_below="@id/line_hr"
                android:text="Sasaa..."
                android:textColor="#000" />

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/textViewRecMsg"
                android:text="17:30"
                android:textSize="11sp" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
