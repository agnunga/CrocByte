<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.Sent_msg">

    <RelativeLayout
        android:id="@+id/layout_sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sharp_sent_conner"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8.5dp"
            android:layout_marginLeft="-15dp"
            android:layout_weight="1"
            android:src="@drawable/arrow_bg1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="6"
            android:layout_alignRight="@+id/sharp_sent_conner"
            android:background="@drawable/rounded_corner"
            android:padding="6dp" >
            <TextView
                android:id="@+id/textViewSentMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Poa sana. "
                android:textColor="#000"/>

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSentMsg"
                android:layout_alignParentRight="true"
                android:text="17:30"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/message_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSentMsg"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="+254 712 929 181"
                android:textSize="11sp"  />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
